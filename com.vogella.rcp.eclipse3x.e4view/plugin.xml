<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.vogella.rcp.eclipse3x.e4view.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.vogella.rcp.eclipse3x.e4view.Perspective"
            id="com.vogella.rcp.eclipse3x.e4view.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="com.vogella.rcp.eclipse3x.e4view.View"
            id="com.vogella.rcp.eclipse3x.e4view.view">
      </view>
      <e4view
            class="com.vogella.rcp.eclipse3x.e4view.E4view1"
            id="com.vogella.rcp.eclipse3x.e4view.e4view1"
            name="Eclipse 4 View"
            restorable="true">
      </e4view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="com.vogella.rcp.eclipse3x.e4view.view">
         </view>
         <view
               id="com.vogella.rcp.eclipse3x.e4view.e4view1"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
